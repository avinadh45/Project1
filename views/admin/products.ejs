            <script>
              
  

   
    function validate(event) {
    var productName = document.getElementById("productName").value.trim();
    var description = document.getElementById("discription").value.trim();
    var countInstock = document.getElementById("countInstock").value.trim();
    var brand = document.getElementById("brand").value.trim();
    var price = document.getElementById("price").value.trim();
    var category = document.getElementById("categoryInput").value.trim();
    var imageInput = document.getElementById("images");

    var errors = {};

    
    if (productName === "") {
        errors.productName = "Product name is required.";
    }

  
    if (description === "") {
        errors.discription = "Description is required.";
    }

  
    if (countInstock === "") {
        errors.countInstock = "Count in stock is required.";
    } else if (isNaN(countInstock) || parseInt(countInstock) <= 0) {
        errors.countInstock = "Count in stock must be a non-negative number.";
    }

    if (brand === "") {
        errors.brand = "Brand is required.";
    }

    if (price === "") {
        errors.price = "Price is required.";
    } else if (isNaN(price) || parseFloat(price) <= 0) {
        errors.price = "Price must be a positive number.";
    }
    
    if (imageInput.files.length === 0) {
        errors.images = "Image is required.";
    }

  
    if (category === "") {
        errors.categoryInput = "Category is required.";
    }

  
    displayErrors(errors);

    if (Object.keys(errors).length > 0) {
        event.preventDefault();
    }
}

function displayErrors(errors) {
    for (var field in errors) {
        if (errors.hasOwnProperty(field)) {
            var errorElement = document.getElementById(field + "Error");
            if (errorElement) {
                errorElement.textContent = errors[field];
              
                (function(element) {
                    setTimeout(function() {
                        element.textContent = "";
                    }, 10000); 
                })(errorElement);
            }
        }
    }
}




document.getElementById("productForm").addEventListener("submit", validate);


