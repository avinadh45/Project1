            <script>

     function previewFiles() {
    const previewContainer = document.getElementById('imagePreviews');
    const filesInput = document.getElementById('images');
    const files = filesInput.files;
    const imagesError = document.getElementById('imagesError');

 
    imagesError.textContent = '';

 
    const croppers = [];

    for (const file of files) {
        const reader = new FileReader();

      
        if (!file.type.startsWith('image/')) {
          
            imagesError.textContent = 'Only image files are allowed.';
            continue;
        }

     
        reader.onload = function(event) {
            const imgElement = document.createElement('img');
            imgElement.src = event.target.result;
            imgElement.classList.add('image-preview');
            previewContainer.appendChild(imgElement);

          
            const removeButton = document.createElement('button');
            removeButton.textContent = 'Remove';
            removeButton.addEventListener('click', function() {
               
                const index = Array.from(previewContainer.children).indexOf(imgElement);
                if (index !== -1) {
                    imgElement.remove();
                    removeButton.remove();
                    croppers[index].destroy(); 
                    croppers.splice(index, 1); 
                }
            });
            previewContainer.appendChild(removeButton);

           
            const cropper = new Cropper(imgElement, {
                aspectRatio: 16 / 15, 
                viewMode: 1,
                zoomable: true, 
               
            });

      
            croppers.push(cropper);

       
            cropper.on('crop', function(event) {
             
                const croppedData = cropper.getCroppedCanvas().toDataURL('image/jpeg');

               
                const croppedImg = document.createElement('img');
                croppedImg.src = croppedData;
                previewContainer.appendChild(croppedImg);

               
            });
        };

        reader.readAsDataURL(file);
    }
}


