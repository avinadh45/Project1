            <script>
                document.addEventListener('DOMContentLoaded', function () {
    
const listButtons = document.querySelectorAll('.list-btn, .unlist-btn');

listButtons.forEach(button => {
    button.addEventListener('click', function () {
        const productId = this.getAttribute('data-product-id');
        const isUnlisted = this.classList.contains('unlist-btn');

        const action = isUnlisted ? 'unlist' : 'list';

       
        Swal.fire({
            title: "Are you sure?",
            text: "You want to " + (isUnlisted ? "Unlist" : "List") + " this product?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, " + (isUnlisted ? "Unlist" : "List") + " it!"
        }).then((result) => {
            if (result.isConfirmed) {
              
                fetch(`/admin/${action}product?id=${productId}`, {
                    method: 'PATCH'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                     
                        this.classList.toggle('btn-danger');
                        this.classList.toggle('btn-warning');
                        this.classList.toggle('list-btn');
                        this.classList.toggle('unlist-btn');
                        this.textContent = isUnlisted ? 'List' : 'Unlist';

                        Swal.fire({
                            title: "Success!",
                            text: "Product has been " + (isUnlisted ? "Unlisted" : "Listed") + ".",
                            icon: "success"
                        });
                    } else {
                       
                        console.error(data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        });
    });
});

});

document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.delete-product');

    deleteButtons.forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault(); // Prevent the default action (i.e., navigating to the link)

            const productId = this.getAttribute('href').split('/').pop(); // Extract the product ID from the link URL

            // Show confirmation dialog
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to delete this product. This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it'
            }).then((result) => {
                if (result.isConfirmed) {
                    // User confirmed, proceed with the delete action
                    window.location.href = `/admin/deleteproduct/${productId}`;
                }
            });
        });
    });
});

