        <script>
           
    
            async function fetchOrders(url) {
                const response = await fetch(url);
                const data = await response.json();
                updateTable(data);
            }
    
            function updateTable(orders) {
                const tableBody = document.getElementById('orderTableBody');
                tableBody.innerHTML = ''; 
    
                orders.forEach(order => {
                    const row = `
                        <tr class="text-center">
                            <td class="text-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                    <label class="form-check-label" for="transactionCheck02"></label>
                                </div>
                            </td>
                            <td><a href="#" class="fw-bold">${order._id}</a></td>
                            <td>${order.Address[0].name}</td>
                            <td>${new Date(order.placed).toLocaleDateString()}</td>
                            <td>${order.totalprice}</td>
                            <td><span class="badge badge-pill badge-soft-success">${order.paymentstatus}</span></td>
                            <td><i class="material-icons md-payment font-xxl text-muted mr-5"></i>${order.payment}</td>
                            <td>${order.status}</td>
                            <td><a href="/admin/order-details?id=${order._id}" class="btn btn-xs btn-primary">View details</a></td>
                        </tr>
                    `;
                    tableBody.insertAdjacentHTML('beforeend', row);
                });
            }
//           
    
    
    
    
    
            async function fetchOrders(url) {
        try {
            console.log("Fetching data from:", url); 
            const response = await fetch(url);
            const data = await response.json();
            console.log('Fetched Data:', data); 
            updateTable(data);
        } catch (error) {
            console.error('Error fetching orders:', error);
        }
    }

    
    document.getElementById('fetchDataButton').addEventListener('click', () => {
        const timeRange = document.getElementById('timeRangeFilter').value;
        let url;
        switch (timeRange) {
            case 'daily':
                url = '/admin/sales-daily';
                break;
            case 'weekly':
                url = '/admin/sales-weekly';
                break;
            case 'monthly':
                url = '/admin/sales-monthly';
                break;
            case 'yearly':
                url = '/admin/sales-yearly';
                break;
            //
            default:
                url = '/admin/sales-all';
                break;
        }   
        fetchOrders(url);
    });

    
    window.onload = () => {
        fetchOrders('/admin/sales-all');
    };

        
